<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Allow the app to be distributed outside the Mac App Store -->
    <key>com.apple.security.app-sandbox</key>
    <false/>
    
    <!-- Microphone access for voice recording -->
    <key>com.apple.security.device.audio-input</key>
    <true/>
    
    <!-- Accessibility for keyboard/mouse simulation (enigo) -->
    <key>com.apple.security.automation.apple-events</key>
    <true/>
    
    <!-- Network access for API calls -->
    <key>com.apple.security.network.client</key>
    <true/>
    
    <!-- File access for config storage -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    
    <!-- Allow hardened runtime exceptions for enigo -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    
    <!-- Allow JIT for WebView -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
</dict>
</plist>
