{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ListenOS",
  "version": "0.1.0",
  "identifier": "com.listenos.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../.next"
  },
  "app": {
    "windows": [
      {
        "title": "ListenOS Dashboard",
        "label": "dashboard",
        "url": "/",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "decorations": true,
        "center": true,
        "visible": true
      },
      {
        "title": "Voice Assistant",
        "label": "assistant",
        "url": "/assistant",
        "width": 200,
        "height": 60,
        "x": 860,
        "y": 20,
        "resizable": false,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": false,
        "shadow": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; script-src 'self' 'unsafe-eval'; connect-src 'self' https://api.groq.com https://api.deepgram.com wss://api.deepgram.com; img-src 'self' data:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    }
  }
}
