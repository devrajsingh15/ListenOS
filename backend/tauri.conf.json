{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ListenOS",
  "version": "0.1.11",
  "identifier": "com.listenos.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../out"
  },
  "app": {
    "windows": [
      {
        "title": "ListenOS Dashboard",
        "label": "dashboard",
        "url": "/",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "decorations": true,
        "center": true,
        "visible": true
      },
      {
        "title": "Voice Assistant",
        "label": "assistant",
        "url": "/assistant",
        "width": 500,
        "height": 60,
        "x": 710,
        "y": 20,
        "resizable": false,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": false,
        "shadow": false,
        "focus": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; script-src 'self' 'unsafe-eval'; connect-src 'self' https://api.groq.com https://api.deepgram.com wss://api.deepgram.com; img-src 'self' data:"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "EvidentSphere",
    "copyright": "Copyright Â© 2025 EvidentSphere. All Rights Reserved.",
    "category": "Productivity",
    "shortDescription": "AI-Powered Voice Control System",
    "longDescription": "ListenOS is a native desktop application that lets you control your computer using natural voice commands. Simply hold Ctrl+Space, speak your command, and watch it execute instantly.",
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    },
    "macOS": {
      "entitlements": "entitlements.plist",
      "minimumSystemVersion": "10.15"
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDhEQjMyQjdGODI4MjBGNEMKUldSTUQ0S0NmeXV6alUxME0yRENQU3F5a1hVWTZGbEx0alpMOW9FVW40TTJFc2FLejBRMVRkTU8K",
      "endpoints": [
        "https://github.com/devrajsingh15/ListenOS/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    },
    "deep-link": {
      "desktop": {
        "schemes": ["listenos"]
      }
    }
  }
}
