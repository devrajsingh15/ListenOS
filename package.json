  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "version:sync": "node scripts/sync-version.mjs",
    "release:prepare": "node scripts/bump-version.mjs",
    "pretauri:build": "npm run version:sync",
    "pretauri:build:mac:dmg": "npm run version:sync",
    "pretauri:build:windows:nsis": "npm run version:sync",
    "pretauri:build:linux:appimage": "npm run version:sync",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "tauri:build:mac:dmg": "tauri build --bundles dmg",
    "tauri:build:windows:nsis": "tauri build --bundles nsis",
    "tauri:build:linux:appimage": "tauri build --bundles appimage",
    "server:dev": "npm run dev --prefix server",
    "server:build": "npm run build --prefix server",
    "server:start": "npm run start --prefix server",
    "docker:up": "docker-compose -f server/docker-compose.yml up -d",
    "docker:down": "docker-compose -f server/docker-compose.yml down",
    "docker:logs": "docker-compose -f server/docker-compose.yml logs -f",
    "docker:build": "docker-compose -f server/docker-compose.yml build",
    "dev:all": "concurrently \"npm run server:dev\" \"npm run tauri:dev\"",
    "db:push": "npm run --prefix server drizzle-kit push",
    "db:studio": "npm run --prefix server drizzle-kit studio"
  },
  "dependencies": {
    "@hugeicons/core-free-icons": "^3.1.0",
    "@hugeicons/react": "^1.1.3",
    "@radix-ui/themes": "^3.2.1",
    "@tauri-apps/api": "^2.9.1",
    "@tauri-apps/plugin-deep-link": "^2.4.5",
    "@tauri-apps/plugin-process": "^2.3.1",
    "@tauri-apps/plugin-shell": "^2.3.3",
    "@tauri-apps/plugin-updater": "^2.9.0",
    "framer-motion": "^12.23.26",
    "next": "16.1.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@tauri-apps/cli": "^2.9.6",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^8.2.2",
    "eslint": "^9",
    "eslint-config-next": "16.1.0",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "ignoreScripts": [
    "sharp",
    "unrs-resolver"
  ],
  "trustedDependencies": [
    "sharp",
    "unrs-resolver"
